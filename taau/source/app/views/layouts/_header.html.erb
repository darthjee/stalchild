<div
  class="flex-column align-items-center bg-light border-bottom shadow-sm"
  ng-controller="Global.HeaderController as headerController">

  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <a class="navbar-brand" href="#/">
      Stalchild
    </a>
    <button class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item p-2" ng-hide="headerController.logged">
          <a
            ng-hide="headerController.ongoing"
            data-toggle="modal"
            href="#"
            class="nav-link text-dark"
            data-target="#loginModal">
            Login
          </a>
        </li>
        <li class="nav-item p-2" ng-show="headerController.logged">
          <a
            ng-hide="headerController.ongoing"
            data-toggle="modal"
            href="#"
            class="nav-link text-dark"
            ng-click="headerController.logoff()">
            Logoff
          </a>
        </li>
      </ul>
    </div>
  </nav>
</div>
